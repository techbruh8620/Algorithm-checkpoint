ALGORITHM sentence
VAR
    dvc,dvd,dve=INTEGER;
    sentc:=STRING[]
BEGIN
    dvc:=0;
    dvd:=1
    dve:=0
    write(i'm doing my checkpoint)
    read(sentc)
    IF (sentc[dvc]="")THEN
    dvd:=dvd+1;

    END_IF
    IF(sentc[dvc]in ["a,""e,""u,""i,""o,""y"])THEN
    dve:=dvc+1;
    
    END_IF
    dvc:=dvc+1;
    UNTIL(sentc[dvc]=".")

    write("the number of characters is,"dvc+1)
    write("the number of words is,"dvd)
    write("the number of vowels is,"dve)
END